.nav-block {
    height: 50px;
    width: 100%;
    display: block;
}

[ui-view]#main {
    width: 100%;
    height: 100%;
}

.nav [user-info] .wrap {
    position: relative;
    float: left;
    display: inline-block;
    margin: 5px;
    width: 40px;
    height: 40px;
}

.login-profile .more {
    line-height: 50px;
    margin-right: 10px;
}

.login-profile .name {
    line-height: 50px;
    margin: 0 10px;
}

.login-profile .name > i {
    font-size: 130%;
    margin: 10px;
    color: #ccc;
}

.login-profile ul {
    display: none;
    position: absolute;
    right: 5px;
    top: 45px;
    z-index: 20;
    min-width: 120px;
}

.login-profile:hover ul {
    display: block;
}

