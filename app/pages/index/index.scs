.arrow-div {
    right: 8px;
    background: #f1f1f1;
    padding: 3px;
}

.arrow-div li {
    padding: 10px;
    margin: 5px;
}

li.divider {
    padding: 0
}

.arrow-div li:hover {
    color: #777;
    background-color: #DADADA;
}

.arrow-div:after {
    border-radius: 5px;
    bottom: 100%;
    left: 80%;
    border: solid transparent;
    content: " ";
    height: 0;
    width: 0;
    position: absolute;
    pointer-events: none;
    border-color: rgba(241, 241, 241, 0);
    border-bottom-color: #f1f1f1;
    border-width: 12px;
    margin-left: -12px;
}

.affix-top input {
    color: white;
}