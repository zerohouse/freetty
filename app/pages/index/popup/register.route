app.post('/api/user', function (req, res) {
    req.passed.introduce = {type: 'text'};
    req.passed.date = new Date();
    var user = new User(req.passed);
    user.save(function (err, result) {
        var resu = {};
        resu.result = result;
        resu.err = err;
        res.send(resu);
    });
});