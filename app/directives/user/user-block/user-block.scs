[user-block] {
    min-width: 200px;
}

[user-block] .name {
}

[user-block] .badge {
    margin-right: 5px;
}

[user-block] .info, [user-block] .photo {
    float: left;
}

[user-block] .info {
    padding: 18px 5px;
}

[user-block] .photo {
    width: 100px;
    padding: 10px;
    overflow: hidden;
}


[user-block] .photo img {
    width: 100%;
}