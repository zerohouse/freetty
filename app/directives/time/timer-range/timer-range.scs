timer-range {
    position: relative;
    padding: 20px;
}

timer-range .timer {
    position: absolute;
    width: 100%;
    z-index: 10;
    padding: 10px;
    border-radius: 10px;
    text-align: center;
    font-size: 80%;
    right: 0;
    top: 26px;
}