.placeholder {
    color: #bdc3c7;
}

.border-active {
    border-color: #1ABC9C;
}

timer-range {
    position: relative;
}

timer-range .timer {
    position: absolute;
    width: 100%;
    z-index: 10;
    padding: 0 10px;
    border-radius: 10px;
    text-align: center;
    font-size: 80%;
    left: -20px;
    min-width: 180px;
    top: -10px;
}