[user-info] {
    display: block;
    margin: auto;
    margin-top: 20px;
    width: 90px;
    height: 90px;
    border-radius: 50%;
    overflow: hidden;
    border: 3px solid #f5f5f5;
}

[user-info] img {
    width: 100%;
    height: 100%;
}

[user-info] .name {
    position: absolute;
    bottom: -30px;
}
